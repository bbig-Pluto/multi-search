<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.multi.member.repository.MemberMapper">
    
    <insert id="signUp" parameterType="com.multi.member.domain.Member" useGeneratedKeys="true" keyProperty="memberId">
        INSERT INTO member
            (
                name
               , account
               , password
               , email
               , phone_number
               , image_url
               , birth_date
               , use_yn
               , cert_yn
               , role_id
               , create_date
               , update_date
               , gender
            )
        VALUES
            (
                #{name},
                #{account},
                #{password},
                #{email},
                #{phoneNumber},
                <choose>
                    <when test="imageUrl != null and imageUrl != ''">
                        #{imageUrl}
                  </when>
                  <otherwise>
                     NULL
                    </otherwise>
                </choose>,
                #{birthDate},
                'Y',
                #{certYn},
                1,
                now(),
                now(),
                #{gender}
            )
    </insert>

</mapper>
