<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.multi.member.repository.MemberMapper">
    
    <insert id="signUp" parameterType="com.multi.member.domain.Member" useGeneratedKeys="true" keyProperty="memberId">
        INSERT INTO member
            (
                name
               , account
               , password
               , email
               , phone_number
               , picture
               , birth_date
               , use_yn
               , cert_yn
               , role
               , create_date
               , update_date
               , gender
            )
        VALUES
            (
                #{name},
                #{account},
                #{password},
                #{email},
                #{phoneNumber},
                <choose>
                    <when test="picture != null and picture != ''">
                        #{picture}
                  </when>
                  <otherwise>
                     NULL
                    </otherwise>
                </choose>,
                #{birthDate},
                'Y',
                #{certYn},
                #{role},
                now(),
                now(),
                #{gender}
            )
    </insert>

    <!-- 소셜 로그인 : Google, Naver, Kakao.. -->
    <insert id="signUpWithSocialLogin" parameterType="com.multi.member.domain.Member" statementType="CALLABLE">
        <![CDATA[
        {
            CALL sp_insert_member
                (
                    #{name},
                    #{email},
                    #{picture},
                    #{role},
                    #{registrationId},
                    #{providerToken}
                )
        }
        ]]>
    </insert>

    <select id="getMemberByEmail" parameterType="string" resultType="com.multi.member.domain.Member">
        SELECT
            member_id,
            name,
            account,
            password,
            email,
            phone_number,
            picture,
            birth_date,
            use_yn,
            cert_yn,
            role,
            create_date,
            update_date,
            gender
        FROM member
        WHERE email = #{email}
          AND use_yn = 'Y'
          AND cert_yn = 'Y'
    </select>

    <select id="getMemberById" parameterType="long" resultType="com.multi.member.domain.Member">
        SELECT
            member_id,
            name,
            account,
            password,
            email,
            phone_number,
            picture,
            birth_date,
            use_yn,
            cert_yn,
            role,
            create_date,
            update_date,
            gender
        FROM member
        WHERE member_id = #{memberId}
        AND use_yn = 'Y'
        AND cert_yn = 'Y'
    </select>

    <!-- 소셜 로그인 후 session에 저장 할 회원 조회 -->
    <select id="getMemberByEmailWithSocialLogin" parameterType="string" resultType="com.multi.member.domain.Member">
        SELECT
            m.name,
            m.email,
            m.picture,
            m.role
        FROM member m
        WHERE m.email = #{email}
        AND m.use_yn = 'Y'
        AND m.cert_yn = 'Y'
    </select>

    <!-- 소셜 로그인 사용자의 이메일, 대표 이미지 변경 -->
    <update id="updateMemberByEmailAndPicture" parameterType="com.multi.member.domain.Member">
        UPDATE member
        SET email = #{email},
            picture = #{picture}
        WHERE email = #{email}
        AND use_yn = 'Y'
        AND cert_yn = 'Y'
    </update>

</mapper>
